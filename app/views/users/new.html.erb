<h1>Create User</h1>
<form accept-charset="UTF-8" action="/users" method="POST">
    <div class="field-username">
        <label for="username" class="formbuilder-text-label">Username</label>
        <input type="text" placeholder="Username" class="form-control" name="username"  maxlength="15" id="username" required="required" aria-required="true">
    </div>
    <div class="field-email">
        <label for="email" class="formbuilder-text-label">Email</label>
        <input type="email" placeholder="Email" class="form-control" name="email" id="email" required="required" aria-required="true">
    </div>
    <div class="field-password">
        <label for="password" class="formbuilder-text-label">Password</label>
        <input type="password" placeholder="Password " class="form-control" name="password" maxlength="20" id="password" required="required">
    </div>
    <div class="field-submit">
        <button type="submit" class="btn">Submit</button>
    </div>
</form>
